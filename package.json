  "scripts": {
    "setup": "bun run scripts/setup.ts",
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "db:generate": "kysely-codegen",
    "db:check": "atlas schema apply --env local --dry-run",
    "db:check:stage": "atlas schema apply --env stage --dry-run",
    "db:check:prod": "atlas schema apply --env prod --dry-run",
    "db:plan": "atlas schema plan --env local --save",
    "db:plan:stage": "atlas schema plan --env stage --save",
    "db:plan:prod": "atlas schema plan --env prod --save",
    "db:push": "atlas schema apply --env local --auto-approve",
    "db:push:stage": "atlas schema apply --env stage --auto-approve",
    "db:push:prod": "atlas schema apply --env prod --auto-approve",
    "db:setup": "bun run db:push && bun run db:generate"
